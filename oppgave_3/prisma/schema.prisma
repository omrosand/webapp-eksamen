generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model Year {
  id    String @id @default(cuid())
  weeks Week[]
}

model Week {
  id     String @id @default(cuid())
  week   Int    @unique
  days   Day[]
  year   Year   @relation(fields: [yearId], references: [id])
  yearId String
}

model Day {
  id         String   @id @default(cuid())
  name       String
  employee   Employee @relation(fields: [employeeId], references: [id])
  week       Week     @relation(fields: [weekId], references: [id])
  weekId     String
  employeeId Int
}

model Employee {
  id    Int    @id
  name  String
  rules String
  days  Day[]
}
